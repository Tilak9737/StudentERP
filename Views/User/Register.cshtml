@model StudentERP.Models.StudentLogin

@{
    ViewData["Title"] = "Register";
}

<style>
    /* StudentERP Registration Styling */
    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: 2px solid #ff6b6b;
    }

    h2 {
        color: #4ecdc4;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
        margin-right: 25px;
    }

    .control-label {
        color: #ff9f1c;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 1.1em;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #95e1d3;
        border-radius: 8px;
        font-size: 1em;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .form-control:focus {
            border-color: #ff6b6b;
            outline: none;
            box-shadow: 0 0 8px rgba(255, 107, 107, 0.3);
            background: white;
        }

    .text-danger {
        color: #ff3860 !important;
        font-size: 0.9em;
        margin-top: 5px;
        display: block;
    }

    .btn {
        padding: 12px 25px;
        border: none;
        border-radius: 25px;
        font-size: 1.1em;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

    .btn-primary {
        background: linear-gradient(45deg, #45b7d1, #4ecdc4);
        color: white;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #4ecdc4, #45b7d1);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(69, 183, 209, 0.3);
        }

    .nav-link {
        color: #ff9f1c;
        text-decoration: none;
        font-size: 1em;
        transition: all 0.3s ease;
    }

        .nav-link:hover {
            color: #ff6b6b;
            text-decoration: underline;
        }

    /* Popup Styling */
    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        z-index: 1000;
        min-width: 300px;
        text-align: center;
    }

        .popup.success {
            background: #95e1d3;
            border: 2px solid #52b788;
            color: #2d6a4f;
        }

        .popup.error {
            background: #ff3860;
            border: 2px solid #ff1c45;
            color: white;
        }

    .popup-content {
        margin-bottom: 15px;
        font-size: 1.2em;
    }

    .popup-close {
        background: #fff;
        color: #333;
        border: none;
        padding: 8px 15px;
        border-radius: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .popup-close:hover {
            background: #ff6b6b;
            color: white;
        }

    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    @@media (max-width: 768px) {
        .container {
            margin: 20px;
            padding: 20px;
        }

        h2 {
            font-size: 2em;
        }

        .btn {
            width: 100%;
            margin: 5px 0;
        }
    }
</style>

<div class="container">
    <h2>StudentERP Register</h2>

    <form id="registerForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="StudentMail" class="control-label"></label>
            <input asp-for="StudentMail" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="StudentMail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HashPassword" class="control-label">Password</label>
            <input asp-for="HashPassword" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="HashPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>

        <div class="form-group">
            <p>Already registered? <a href="@Url.Action("Login", "User")" class="nav-link">Login here</a></p>
        </div>
    </form>
</div>

<!-- Popup and Overlay -->
<div class="overlay" id="popupOverlay"></div>
<div class="popup" id="popup">
    <div class="popup-content" id="popupMessage"></div>
    <button class="popup-close" id="popupClose">Close</button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#registerForm").submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("Register", "User")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            showPopup("Registration successful! Redirecting to login...", "success");
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Login", "User")';
                            }, 2000);
                        } else {
                            showPopup(response.message || "Registration failed. Please try again.", "error");
                        }
                    },
                    error: function () {
                        showPopup("An error occurred. Please try again.", "error");
                    }
                });
            });

            $("#popupClose").click(function () {
                hidePopup();
            });

            $("#popupOverlay").click(function () {
                hidePopup();
            });

            function showPopup(message, type) {
                $("#popupMessage").text(message);
                $("#popup").removeClass("success error").addClass(type).show();
                $("#popupOverlay").show();
            }

            function hidePopup() {
                $("#popup").hide();
                $("#popupOverlay").hide();
            }
        });
    </script>
}