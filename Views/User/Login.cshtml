@model StudentERP.Models.StudentLogin

@{
    ViewData["Title"] = "Login";
}

<style>
    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background: #1a1a1a; /* Black chalkboard */
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        position: relative;
        color: #fff; /* White chalk text */
        border: 10px solid #8b5a2b; /* Wooden border */
        background-image: linear-gradient(rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.05)), url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAAFklEQVQImWNgYGD4z8DAwMDAwMDAgAkA4gAEGwQe4gAAAABJRU5ErkJggg==');
    }

        .container::before {
            content: '';
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            border: 10px solid #8b5a2b;
            border-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAAFklEQVQImWNgYGD4z8DAwMDAwMDAgAkA4gAEGwQe4gAAAABJRU5ErkJggg==') 10 stretch;
            z-index: -1;
        }

    h2 {
        color: #fff;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.2);
    }

    .form-group {
        margin-bottom: 25px;
        margin-right: 25px;
        position: relative;
    }

    .control-label {
        color: #fff;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 1.1em;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #555;
        border-radius: 8px;
        font-size: 1em;
        transition: all 0.3s ease;
        background: #333;
        color: #fff;
    }

        .form-control:focus {
            border-color: #fff;
            outline: none;
            box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
            background: #444;
        }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.9em;
        margin-top: 5px;
        display: block;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
    }

    .btn {
        padding: 12px 25px;
        border: none;
        border-radius: 25px;
        font-size: 1.1em;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

    .btn-primary {
        background: #555;
        color: #fff;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
    }

        .btn-primary:hover {
            background: #777;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
        }

    .nav-link {
        color: #fff;
        text-decoration: none;
        font-size: 1em;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
        transition: all 0.3s ease;
    }

        .nav-link:hover {
            color: #ccc;
            text-decoration: underline;
        }

    /* Popup Styling */
    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        z-index: 1000;
        min-width: 300px;
        text-align: center;
        background: #1a1a1a;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
    }

        .popup.success {
            border: 2px solid #00cc00; /* Green border */
            color: #00cc00; /* Green text */
        }

        .popup.error {
            border: 2px solid #ff0000; /* Red border */
            color: #ff0000; /* Red text */
        }

    .popup-content {
        margin-bottom: 15px;
        font-size: 1.2em;
    }

    .popup-close {
        background: #555;
        color: #fff;
        border: none;
        padding: 8px 15px;
        border-radius: 20px;
        cursor: pointer;
        font-family: 'Chalkduster', 'Comic Sans MS', cursive;
        transition: all 0.3s ease;
    }

        .popup-close:hover {
            background: #777;
        }

    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    @@media (max-width: 768px) {
        .container

    {
        margin: 20px;
        padding: 20px;
    }

    h2 {
        font-size: 2em;
    }

    .btn {
        width: 100%;
        margin: 5px 0;
    }

    .popup {
        min-width: 250px;
    }

    }
</style>

<div class="container">
    <h2>StudentERP Login</h2>

    <form id="loginForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="StudentMail" class="control-label"></label>
            <input asp-for="StudentMail" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="StudentMail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HashPassword" class="control-label">Password</label>
            <input asp-for="HashPassword" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="HashPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>

        <div class="form-group">
            <p>Not registered yet? <a href="@Url.Action("Register", "User")" class="nav-link">Register here</a></p>
        </div>
    </form>
</div>

<!-- Popup and Overlay -->
<div class="overlay" id="popupOverlay"></div>
<div class="popup" id="popup">
    <div class="popup-content" id="popupMessage"></div>
    <button class="popup-close" id="popupClose">Close</button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#loginForm").submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("Login", "User")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            console.log("JWT Token: " + response.token);
                            showPopup("Login successful! Redirecting to dashboard...", "success");
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Dashboard", "User")';
                            }, 2000);
                        } else {
                            showPopup(response.message || "Invalid email, password, or inactive account", "error");
                        }
                    },
                    error: function () {
                        showPopup("An error occurred. Please try again.", "error");
                    }
                });
            });

            $("#popupClose").click(function () {
                hidePopup();
            });

            $("#popupOverlay").click(function () {
                hidePopup();
            });

            function showPopup(message, type) {
                $("#popupMessage").text(message);
                $("#popup").removeClass("success error").addClass(type).show();
                $("#popupOverlay").show();
            }

            function hidePopup() {
                $("#popup").hide();
                $("#popupOverlay").hide();
            }
        });
    </script>
}